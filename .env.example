# API 設定
GROQ_API_KEY=your_groq_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here  # 可選，用於 OCR 功能

# RAG 系統選擇
# 可選值: enhanced, graph, elasticsearch
RAG_SYSTEM_TYPE=enhanced

# Enhanced RAG 設定
ENABLE_CONVERSATION_MEMORY=true
CONVERSATION_MEMORY_STEPS=5
MAX_CONTEXT_LENGTH=4000

# Graph RAG 設定
ENABLE_GRAPH_RAG=false  # 如果 RAG_SYSTEM_TYPE=graph 則會忽略此設定
MAX_TRIPLETS_PER_CHUNK=10
GRAPH_COMMUNITY_SIZE=5

# Elasticsearch RAG 設定
ENABLE_ELASTICSEARCH=false  # 如果 RAG_SYSTEM_TYPE=elasticsearch 則會忽略此設定
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX_NAME=rag_intelligent_assistant
ELASTICSEARCH_USERNAME=  # 可選：如果 Elasticsearch 需要認證
ELASTICSEARCH_PASSWORD=  # 可選：如果 Elasticsearch 需要認證

# OCR 功能設定
ENABLE_OCR=true

# 檔案上傳設定
MAX_FILE_SIZE_MB=10
MAX_IMAGE_SIZE_MB=5
MAX_UPLOAD_FILES=50
SUPPORTED_FILE_TYPES=pdf,txt,docx,md,png,jpg,jpeg,webp,bmp

# 效能調整 (針對不同 RAG 系統)
# Enhanced RAG - 較低記憶體使用
CHUNK_SIZE=1024
CHUNK_OVERLAP=200

# Graph RAG - 較高記憶體使用，需要調整
# CHUNK_SIZE=512
# CHUNK_OVERLAP=100

# Elasticsearch RAG - 可處理大量文檔
# CHUNK_SIZE=2048
# CHUNK_OVERLAP=400